{
  "root": true,
  "env": {
    "browser": true, 
    "es2022": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["warn", { "args": "after-used", "argsIgnorePattern": "^_" }],
    "valid-jsdoc": "warn"
  }
}